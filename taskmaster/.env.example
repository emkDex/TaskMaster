# ── Database ──────────────────────────────────────────────────────────────────
# PostgreSQL async connection URL (Neon, Supabase, Railway, or local)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/taskmaster

# ── Security ──────────────────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-this-min-32-chars-long
REFRESH_SECRET_KEY=your-refresh-secret-key-change-this-min-32-chars-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── CORS ──────────────────────────────────────────────────────────────────────
# JSON array of allowed origins
ALLOWED_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# ── Application ───────────────────────────────────────────────────────────────
DEBUG=False
APP_NAME=TaskMaster Pro

# ── File Upload ───────────────────────────────────────────────────────────────
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=uploads/

# ── Rate Limiting ─────────────────────────────────────────────────────────────
RATE_LIMIT_LOGIN=5/minute

# ── Docker Compose (local dev only) ──────────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=taskmaster
